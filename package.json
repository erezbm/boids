{
  "scripts": {
    "clean": "rimraf dist",
    "prewatch": "npm run clean",
    "watch": "parcel watch src/index.html --public-url .",
    "typecheck": "tsc --noEmit --watch",
    "prebuild": "npm run clean",
    "build": "parcel build src/index.html --public-url ."
  },
  "eslintConfig": {
    "extends": "airbnb-typescript/base",
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": "off",
      "no-plusplus": "off",
      "no-nested-ternary": "off",
      "object-curly-newline": "off",
      "no-mixed-operators": "off",
      "import/no-absolute-path": "off",
      "import/no-cycle": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/lines-between-class-members": [
        "error",
        "always",
        {
          "exceptAfterSingleLine": true
        }
      ]
    },
    "ignorePatterns": "*.d.ts"
  },
  "sass": {
    "includePaths": [
      "./node_modules"
    ]
  },
  "devDependencies": {
    "@types/resize-observer-browser": "^0.1.5",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "sass": "^1.32.6",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@material/drawer": "^9.0.0",
    "@material/icon-button": "^9.0.0",
    "@material/ripple": "^9.0.0",
    "@material/slider": "^9.0.0",
    "@material/textfield": "^10.0.0",
    "@material/theme": "^10.0.0",
    "@material/top-app-bar": "^9.0.0",
    "@material/typography": "^10.0.0"
  }
}
